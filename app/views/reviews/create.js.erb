function refreshForm(innerHTML) {
  const newReviewForm = document.getElementById('new_review');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews = document.getElementById('reviews-container');
  reviews.insertAdjacentHTML('afterbegin', reviewHTML);
}

<% if @review.errors.any? %>
  refreshForm('<%= j render "reviews/form", book: @book, review: @review %>');
<% else %>
  addReview('<%= j render @review %>');
  document.getElementById('new_review').remove();
<% end %>
